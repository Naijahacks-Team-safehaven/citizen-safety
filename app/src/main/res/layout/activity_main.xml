<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/ploicebuttonCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="@dimen/fourty_dp_dp">

        <ImageView
            android:id="@+id/policebutton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/abc_vector_test"
            android:contentDescription="police" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/police_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Police"
        app:layout_constraintTop_toBottomOf="@+id/ploicebuttonCard"
        app:layout_constraintStart_toStartOf="@+id/ploicebuttonCard"
        app:layout_constraintEnd_toEndOf="@+id/ploicebuttonCard">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/hospitalbuttonCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ploicebuttonCard"
        android:layout_marginRight="@dimen/fourty_dp_dp">

        <ImageView
            android:id="@+id/hospitalbutton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/abc_vector_test"
            android:contentDescription="hospital"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/hospital_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Hospital"
        app:layout_constraintTop_toBottomOf="@+id/hospitalbuttonCard"
        app:layout_constraintStart_toStartOf="@+id/hospitalbuttonCard"
        app:layout_constraintEnd_toEndOf="@+id/hospitalbuttonCard">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/lawyerbuttonCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ploicebuttonCard"
        app:layout_constraintLeft_toRightOf="@id/ploicebuttonCard"
        app:layout_constraintTop_toBottomOf="@id/police_label"
        android:layout_marginTop="@dimen/fifty_dp">

        <ImageView
            android:id="@+id/lawyerbutton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/fab_margin"
            android:textSize="@dimen/fifteen_sp_sp"
            app:srcCompat="@drawable/abc_vector_test"
            android:contentDescription="lawyer"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lawyer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Lawyer"
        app:layout_constraintTop_toBottomOf="@+id/lawyerbuttonCard"
        app:layout_constraintStart_toStartOf="@+id/lawyerbuttonCard"
        app:layout_constraintEnd_toEndOf="@+id/lawyerbuttonCard">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/historybuttonCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifty_dp"
        app:layout_constraintLeft_toLeftOf="@id/hospitalbuttonCard"
        app:layout_constraintTop_toBottomOf="@id/hospital_label">

        <ImageView
            android:id="@+id/historybutton"
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/abc_vector_test"
            android:contentDescription="history"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/history_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report History"
        app:layout_constraintTop_toBottomOf="@+id/historybuttonCard"
        app:layout_constraintStart_toStartOf="@+id/historybuttonCard"
        app:layout_constraintEnd_toEndOf="@+id/historybuttonCard">
    </TextView>

    <TextView
        android:id="@+id/sos_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="SOS"
        android:layout_marginBottom="50dp">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>